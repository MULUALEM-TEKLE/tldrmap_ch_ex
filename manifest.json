{
	"name": "tldr.map",
	"version": "0.0.0.1",
	"manifest_version": 3,
	"description": "The tldr.map Extension is a Chrome extension designed to help users create visual mind maps from web pages.",
	"action": {
		"default_popup": "popup.html",
		"resizable": true
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content-scripts.js"],
			"run_at": "document_start"
		}
	],
	"permissions": ["activeTab", "storage", "scripting"],
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
